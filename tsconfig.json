{
	"extends": "@tiagojacinto/typescript-config/base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2021",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2021"
		],
		"jsx": "react-jsx"
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	]
}
